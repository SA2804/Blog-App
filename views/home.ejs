<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog App</title>
    <link rel="icon" type="image/x-icon" href="/images/feather.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/home.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Protest+Revolution&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('partials/header.ejs') %>
    <div class="main">
        <div class="blogTitle">
                <% if (locals.title) { %>
                    <% if (locals.updatedTitle) { %>
                        <% for( let k = 0; k < title.length; k++ ) { %>
                            <% if (updatedTitle===title[k]) { %>
                                    <% content[k]=updatedContent %>
                                    <%title.pop()%>    
                                <% } %>
                        <% } %>
                    <% } else if (locals.deleteTitle) { %>
                        <% for( let k = 0; k < title.length; k++ ) { %>
                            <% if (deleteTitle==title[k]) { %>
                                <% title.splice(k,1) %>
                                <% content.splice(k,1) %>
                                <%title.pop()%>   
                        <% } %>
                        <% }%>
                        <% } else if (locals.deleteAll) { %>
                            <% title=[]; %>
                            <% content=[]; %>
                        <% }%>
                    <% if (title.length!==0) { %>
                        <% for(let k = 0; k < title.length; k++) { %>
                            <% let p=k+1 %>
                            <a href="#<%= p %>">
                                <p class="protest-revolution-regular"> <%= title[k] %> </p>
                            </a>
                        <% } %>
                    <% } %>
                <% } %>
        </div>
        <div class="blogContent">
            <% if (locals.content) { %>
                <% if (content.length!==0) { %>
                    <% for(let k = 0; k < content.length; k++) { %>
                        <% let p = k+1 %>
                        <div id="<%= p %>">
                            <p class="protest-revolution-regular"> <%= content[k] %> </p>
                        </div>
                    <% } %>
                <% } %>
            <% } %>
        </div>
    </div>
    <footer class="protest-revolution-regular">
            <%- include('partials/footer.ejs') %>
        </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>